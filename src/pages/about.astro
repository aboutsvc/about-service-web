---
import Features2 from '~/components/widgets/Features2.astro';
import Features3 from '~/components/widgets/Features3.astro';
import Hero from '~/components/widgets/Hero.astro';
import Stats from '~/components/widgets/Stats.astro';
import Steps2 from '~/components/widgets/Steps2.astro';
import Layout from '~/layouts/PageLayout.astro';

const metadata = {
  title: 'About us',
};
---

<Layout metadata={metadata}>
  <!-- Hero Widget ******************* -->

  <Hero
    tagline="About us"
    image={{
      src: 'https://images.unsplash.com/photo-1559136555-9303baea8ebd?ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D&auto=format&fit=crop&w=2070&q=80',
      alt: 'Caos Image',
    }}
  >
    <Fragment slot="title">
      Empower your business with <br />
      <span class="text-accent dark:text-white highlight"> Innovative Tech Solutions</span>
    </Fragment>

    <Fragment slot="subtitle">
      At About Service, we specialize in providing cutting-edge software development, AI-powered tools, and secure data management services. Our solutions simplify complex business processes, enhance operational efficiency, and scale alongside your growth-bringing advanced technology and reliability to the heart of your business success.
    </Fragment>
  </Hero>

